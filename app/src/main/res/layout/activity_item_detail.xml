<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".BTDetailFragment"
    android:weightSum="1">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="160dp"

        android:id="@+id/detailLogScrollView" >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/BTDetailLogWindow"
            android:background="#ffd9d9d9"
            android:inputType="none"
            android:nestedScrollingEnabled="true" />
    </ScrollView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BTDetailListView"
        android:layout_gravity="center_horizontal"
        android:choiceMode="singleChoice"
        android:divider="@color/accent_material_dark"
        android:dividerHeight="2px"
        android:listSelector="@color/primary_material_light" />
</LinearLayout>
